<html lang="kk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Жалжымалы Қорап</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
            overflow: hidden;
        }
        .box {
            width: 100px;
            height: 100px;
            background-color: red;
            position: absolute;
            animation: moveBox 4s infinite alternate ease-in-out, changeColor 4s infinite alternate, scaleBox 2s infinite alternate;
        }
        @keyframes moveBox {
            0% { left: 0; top: 50%; transform: translateY(-50%); }
            100% { left: calc(100% - 100px); top: 50%; transform: translateY(-50%); }
        }
        @keyframes changeColor {
            0% { background-color: red; }
            33% { background-color: blue; }
            66% { background-color: green; }
            100% { background-color: yellow; }
        }
        @keyframes scaleBox {
            0% { width: 100px; height: 100px; }
            100% { width: 200px; height: 200px; }
        }
    </style>
</head>
<body>
    <div class="box"></div>
    <script>
        let count = 0;
        const maxCycles = 10;
        const box = document.querySelector('.box');
        
        box.addEventListener('animationiteration', () => {
            count++;
            if (count >= maxCycles) {
                box.style.animation = 'none';
            }
        });
    </script>
</body>
